<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/admin/add-hotels" class="btn btn-success ml-auto">Add Hotels</a>
    </div>
    <table class="table">
      <thead>
        <tr>
          
          <th scope="col">USER NAME</th>
          <th scope="col">Email</th>
         <th scope="col">CITY</th>
        </tr>
      </thead>
      <tbody>
        {{#each hotel}}
        <tr>
        
          <td>{{this.Name}}</td>
          <td>{{this.Email}}</td>
          <td>{{this.City}}</td>
      
        
        <td><a href="/admin/edit-hotel/{{this._id}}" class="btn btn-primary">Edit</a></td>
           <td><a href="/admin/delete-hotel/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.Name}} ?')">Delete</a></td>
         
      </tr>
        {{/each}}

      </tbody>

    </table>
  </div>
  </div>
</section>