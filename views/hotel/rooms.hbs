
<section>
  <div class="container">
    <div class="row mt-4">
      <a href="/hotel/add-rooms" class="btn btn-success ml-auto">Add Rooms</a>
    </div>
    <table class="table">
      <thead>
        <tr>
          
          <th scope="col">ROOM NAME</th>
          <th scope="col">AVAILABLE ROOMS</th>
         <th scope="col">ROOM PRICE</th>
          <th scope="col">ROOM TYPE</th>
           <th scope="col">FEATURES</th>
            <th scope="col">Features</th>
           
        </tr>
      </thead>
      <tbody>
        {{#each rooms}}
        <tr>
          <td><img style="width:70px;height:60px" src="/room-images/{{this._id}}.jpg">{{this.RoomName}}</td>
          <td>{{this.RoomName}}</td>
          <td>{{this.Available}}</td>
          <td>{{this.RoomPrice}}</td>
          <td>{{this.type}}</td>
          <td>{{this.features}}</td>
          
      
        
        <td><a href="/hotel/edit-rooms/{{this._id}}" class="btn btn-primary">Edit</a></td>
           <td><a href="/hotel/delete-hotel/{{this._id}}" class="btn btn-danger" onclick="return confirm('are you want to delete {{this.Name}} ?')">Delete</a></td>
         
      </tr>
        {{/each}}

      </tbody>

    </table>
  </div>
  </div>
</section>
























